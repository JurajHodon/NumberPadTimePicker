<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.philliphsu.numberpadtimepickersample.TimePickerActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.philliphsu.numberpadtimepicker.NumberPadTimePicker
            android:id="@+id/time_picker_view_standalone"
            style="@style/CustomWidthNumberPadTimePicker"
            android:layout_gravity="center"
            android:visibility="gone"
            app:nptp_numberPadTimePickerLayout="standalone" />

        <com.philliphsu.numberpadtimepicker.NumberPadTimePicker
            android:id="@+id/time_picker_view_alert"
            style="@style/CustomWidthNumberPadTimePicker"
            android:layout_gravity="center"
            android:visibility="gone"
            app:nptp_numberPadTimePickerLayout="alert" />

        <com.philliphsu.numberpadtimepicker.NumberPadTimePicker
            android:id="@+id/time_picker_view_bottom_sheet"
            style="@style/CustomWidthNumberPadTimePicker"
            android:layout_gravity="center"
            android:visibility="gone"
            app:nptp_numberPadTimePickerLayout="bottomSheet" />

    </FrameLayout>

</ScrollView>
